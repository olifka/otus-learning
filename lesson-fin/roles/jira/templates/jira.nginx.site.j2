        #add_header Strict-Transport-Security max-age=15768000;

        access_log /var/log/nginx/jira.exset.com/access_443.log;
        error_log /var/log/nginx/jira.exset.com/error_443.log;

location / {
        proxy_pass http://10.100.100.100;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-NginX-Proxy true;
        proxy_redirect  off;
        proxy_connect_timeout 360s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        if ($uri ~* "/.*\.\."){ return 405; }
}

location /secure/TempoAccountBoard!report.jspa {
        if ($arg_account) {
                return 302 http://10.100.100.100/secure/Tempo.jspa#/accounts/?search=$arg_account;
        }
}

include /etc/nginx/snippets/jira_cache.conf;
}